<header class="header header--main">
  <div class="col-grid">
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
    <div></div>
  </div>

  <button class="menu-toggle">
    <div class="menu-toggle__icon">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </button>

  <div class="logo">
    <a href="/">
      <img src="{{settings.logo | img_url: 'master'}}" alt="{{theme.name}} Logo" />
    </a>
  </div>

  <a class="mobile-cart-icon" href="/cart">
    <i class="fal fa-shopping-cart"></i>
  </a>

  <nav class="nav nav--main">
    <div class="col-grid col-grid--fixed col-grid--block">
      <div></div>
      <div></div>
      <div></div>
      <div></div>
    </div>

    <ul class="nav--main__main">
      {% for link in linklists.main-menu.links %}
      <li class="{% if link.active %}active{% endif %} link">
          <a class="link__main-link" href="{{ link.url }}">{{ link.title }} {% if link.links != blank  %} <span class="link__dropdown-arrow">&darr;</span> {% endif %} </a>
          {% if link.links != blank %}
            <ul class="link__dropdown">
               <li class="link__element">
                <a class="link__link" href="{{ link.url }}"> {{ link.title }} </a>
              </li>
              {% for child_link in link.links %}
                <li class="link__element">
                  <a class="link__link" href="{{ child_link.url }}">{{  child_link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
      </li>
      {% endfor %}
    </ul>



    <h6 class="h6--eyebrow">
      <span>Follow Us</span>
    </h6>
    <ul class="nav--main__social">
      {% for link in linklists.social.links %}
      <li>
        <a class="button button--circle button--circle--ko" href="{{ link.url }}">
          <span class="icon-{{ link.title | downcase }}"></span>
        </a>
      </li>
      {% endfor %}
    </ul>
  </nav>
  
    <ul class="nav--main__sub">

      <li>
        <a href="/search"><span><i class="fal fa-search"></i></span></a>
      </li>

      <li>
        <a href="/account"><span><i class="fal fa-user"></i></span></a>
      </li>

      {% if customer %}
      {% comment %} <li>
        {{ 'Log out' | customer_logout_link }}
      </li> {% endcomment %}
      {% endif %}
      
      <li>
        <a href="/cart">
          <i class="fal fa-shopping-cart"></i><span class="cart-count">{% if cart.items.size > 0 %}- {{ cart.items.size }}{% endif %}</span>
        </a>
      </li>
    </ul>

</header>

<script>
  $(function(){
    $(window).scroll(function(){
      if($("#qab_container #qab_bar").length > 0){
        var annBarHeight = $("#qab_container").height();
        if(annBarHeight < $('html').scrollTop()){
          //$("header.header").css("position", "fixed");
          $("header.header").css("position", "absolute");
        }
        else{
          $("header.header").css("position", "absolute");
        }
      }
      else{
        //$("header.header").css("position", "fixed");
        $("header.header").css("position", "absolute");
      }
    });
  });
  
</script>