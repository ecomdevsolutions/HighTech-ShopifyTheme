    font-family: "poppins-regular";
    font-size: 12px;
    text-transform: uppercase;
    line-height: 0;
    letter-spacing: normal;
  }
  .footer--main .copyright span {
    text-transform: none;
  }
  footer nav.nav-main ul li {
    margin: 0 15px;
  }
  footer nav.nav-sub ul li {
    margin: 0 0 0 40px;
  }
