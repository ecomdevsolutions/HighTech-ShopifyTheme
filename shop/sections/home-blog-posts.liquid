	"class": "module module--blog-posts",
	"max_blocks": 2,
	"blocks": [
		{
			"name": "Blog",
			"type": "column",
			"settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "Blog Image"
				},
				{
					"type": "text",
					"id": "post-date",
					"label": "Post Date"
				},
				{
					"type": "richtext",
					"id": "blog-title",
					"label": "Blog Title"
				},
				{
					"type": "text",
					"id": "link-button",
					"label": "Blog Link Text"
				},
				{
					"type": "url",
					"id": "link-url",
					"label": "Blog Link"
				}
			]
		}
	],
	"presets": [
		{
			"category": "landing-section",
			"name":"Blog Posts",
			"blocks": [
				{
					"type": "column"
				},
				{
					"type": "column"
				}
			]
		}
	]
}
{% endschema %}