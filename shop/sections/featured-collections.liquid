<section class="shopify-section hp-featured-collections">
  <div class="row">
    {% for block in section.blocks %}
      {%- assign collection = collections[block.settings.collection] -%}
      <div class="col-dk-3 col-tb-6 featured-item">
        <div class="collection__image">
          {% if block.settings.image == blank or block.settings.image == nil %}
            {% assign image = collection.image %}
          {% else %}
            {% assign image = block.settings.image %}
          {% endif %}
          <div class="box box--3x2" style="padding-top: 76%;">
            <div class="box__inner">
              <div class="image image--load--fadein image--cover">
                <a href="{{ collection.url }}">
                  <img class="lazyload" data-src="{{ image | img_url: '768x' }}" alt="{{ image.alt }}" />
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="collection__title">
          <h1>{{ collection.title }}</h1>
        </div>
        
        {% comment %}
        <div class="collection__detail">
          <h2 class="detail-title">{{collection.title}}</h2>
          <p class="detail-text">{{block.settings.collection_detail}}</p>
          <a href="{{block.settings.button_link}}" class="btn-shop-collection">{{block.settings.button_text}}</a>
        </div>
        {% endcomment %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
  @media (min-width: 1024px){
    .shopify-section.hp-featured-collections .featured-item:hover .collection__detail{
      bottom: 0px;
      opacity: 1;
      transition: all .3s;
    }
  }

  .shopify-section.hp-featured-collections{
    padding: 60px 0 80px;
  }

  .shopify-section.hp-featured-collections .featured-item{
    position: relative;
    overflow: hidden;
  }

  .shopify-section.hp-featured-collections .collection__title h1{
    margin: 0px;
    background-color: #424242;
    font-family: "Poppins-Bold";
    font-size: 24px;
    color: #FFF;
    text-transform: uppercase;
    text-align: center;
    padding: 20px 10px;
  }

  .shopify-section.hp-featured-collections .collection__detail{
    display: inline-block;
    padding: 30px 50px;
    background-color: #0A78E5;
    position: absolute;
    width: calc(100% - 30px);
    bottom: 0px;
    opacity: 0;
    transition: all .3s;
  }


  .shopify-section.hp-featured-collections .collection__detail .detail-title{
    font-family: "Poppins-Bold";
    font-size: 30px;
    text-transform: uppercase;
    letter-spacing: 0px;
    color: #FFF;
    margin: 0px;
  }

  .shopify-section.hp-featured-collections .collection__detail .detail-text{
    font-family: "Poppins-Regular";
    font-size: 14px;
    line-height: 1.3;
    color: #CECECE;
  }

  .shopify-section.hp-featured-collections .collection__detail .btn-shop-collection{
    border: 2px solid #FFF;
    text-align: center;
    font-family: "Open Sans";
    font-weight: 600;
    font-size: 18px;
    text-transform: uppercase;
    color: #FFF;
    width: 100%;
    display: inline-block;
    padding: 10px 0px;
    margin-top: 15px;
  }
  @media (min-width: 1200px) and (max-width: 1440px) {
    .shopify-section.hp-featured-collections .collection__title h1 {
      font-size: 18px;
    }
    .shopify-section.hp-featured-collections .collection__detail .detail-title {
      font-size: 25px;
      line-height: 25px;
    }
    .shopify-section.hp-featured-collections .collection__detail .btn-shop-collection {
      font-size: 15px;
      padding: 5px 0;
    }
  }
  @media (max-width: 1200px) and (min-width: 1024px) {
    .shopify-section.hp-featured-collections .collection__title h1 {
      font-size: 16px;
      padding: 10px;
    }
    .shopify-section.hp-featured-collections .collection__detail .detail-title {
      font-size: 20px;
      line-height: 25px;
    }
    .shopify-section.hp-featured-collections .collection__detail {
      padding: 20px 30px;
    }
    .shopify-section.hp-featured-collections .collection__detail .btn-shop-collection {
      font-size: 15px;
      padding: 5px 0;
    }
  }
  @media (max-width: 1023px) {
    .shopify-section.hp-featured-collections .featured-item {
      padding: 15px;
    }
    .shopify-section.hp-featured-collections {
      padding: 5px 0;
    }
  }
  @media (max-width: 768px) {
    .shopify-section.hp-featured-collections .featured-item {
      padding: 5px;
    }
    .shopify-section.hp-featured-collections .row {
      margin-left: -5px;
      margin-right: -5px;
    }
    .shopify-section.hp-featured-collections .collection__title h1 {
      font-size: 20px;
    }
  }
  @media (max-width: 600px) {
    .shopify-section.hp-featured-collections .collection__title h1 {
      font-size: 14px;
      padding: 7px 0;
    }
  }
  @media (max-width: 424px) {
    .shopify-section.hp-featured-collections .collection__title h1 {
      font-size: 13px;
    }
  }
  @media (min-width: 375px) and (max-width: 1023px) {
    .shopify-section.hp-featured-collections .featured-item {
      float: left;
      width: 50%;
    }
  }
</style>

