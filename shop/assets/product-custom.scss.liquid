
/*************************************** Custom check box *******************************************/

ul.checkbox-options li.checkbox-option + li.checkbox-option{
    margin-top: 13px;
}

ul.checkbox-options li.checkbox-option{
    border: 1px solid #bebebe;
    margin: 1px;
}

ul.checkbox-options li.checkbox-option.checked{
    border: 2px solid #0074e4;
    background-color: #F6F6F6;
    margin: 0px;
}

ul.checkbox-options li.checkbox-option .form-group{
    display: flex;
    align-items: center;
}

ul.checkbox-options li.checkbox-option .form-group label{
    margin: 0px;
    padding: 10px;
}

ul.checkbox-options li.checkbox-option .form-group [type="checkbox"],
ul.checkbox-options li.checkbox-option .form-group [type="radio"]{
    position: absolute;
    opacity: 0;
}

ul.checkbox-options li.checkbox-option .form-group [type="checkbox"] + label,
ul.checkbox-options li.checkbox-option .form-group [type="radio"] + label {
    position: relative;
    cursor: pointer;
    padding: 0;
    width: 100%;
    padding: 15px 17px;
    font-size: 17px; 
}

ul.checkbox-options li.checkbox-option .form-group [type="checkbox"] + label:before {
    content: '';
    margin-right: 15px;
    display: inline-block;
    vertical-align: text-top;
    width: 20px;
    height: 20px;
    background: white;
    border: 1px solid #ddd;
    border-radius: 2px;
}

ul.checkbox-options li.checkbox-option .form-group [type="radio"] + label:before{
    content: '';
    margin-right: 15px;
    display: inline-block;
    vertical-align: text-top;
    width: 22px;
    height: 22px;
    background: white;
    border: 2px solid #ddd;
    border-radius: 100%;
}

ul.checkbox-options li.checkbox-option .form-group [type="checkbox"]:hover + label:before,
ul.checkbox-options li.checkbox-option .form-group [type="radio"]:hover + label:before {
    background: #0074e4;
    border: 1px solid #0074e4;
    transition: all .3s;
}

ul.checkbox-options li.checkbox-option .form-group [type="checkbox"]:checked + label:before,
ul.checkbox-options li.checkbox-option .form-group [type="radio"]:checked + label:before {
    background: #0074e4;
    border: 1px solid #0074e4;
    transition: all .3s;
}

ul.checkbox-options li.checkbox-option .form-group [type="checkbox"]:checked + label:after {
    content: '';
    position: absolute;
    left: 23px;
    top: 21px;
    background: transparent;
    width: 8px;
    height: 13px;
    transform: rotate(40deg);
    border-radius: 2px;
    border: 2px solid #fff;
    border-color: transparent #FFF #FFF transparent;
    transition: all .3s;
}

/************************************************** End Custom checkbox ********************************************/

/************************************************** Tooltip **************************************************/

/* Tooltip container */
.tooltip-help {
    position: relative;
    display: inline-block;
  }
  
  /* Tooltip text */
  .tooltip-help .tooltiptext {
    visibility: hidden;
    font-family: 'BentonSans';
    width: 350px;
    background-color: black;
    color: #fff;
    text-align: center;
    border-radius: 6px;
    position: absolute;
    z-index: 1;
    top: 120%;
    right: 0px;
    margin-left: -60px;
    font-size: 14px;
    font-weight: 300;
    line-height: 2;
    padding: 8px;
  }

  @media (max-width: 380px){
    .tooltip-help .tooltiptext{
        width: 290px;
        font-size: 13px;
    }
  }
  
  /* Show the tooltip text when you mouse over the tooltip container */
  .tooltip-help:hover .tooltiptext {
    visibility: visible;
  }

